{% extends 'layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="background-login bg-secondary">
        <div class="login-index">

            <h1 class="title">CONNEXION</h1>

            <form method="post" class="container w-100 bg-primary text-light p-5 mb-5 d-flex flex-column align-items-center login-form">
                <div class="w-100">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           required
                           autofocus>
                </div>

                <div class="mt-3 w-100">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                </div>
                <button class="btn btn-lg btn-warm-color mt-5" type="submit">
                    Connexion
                </button>

                <a href="{{ path('app_register') }}"><p class="text-light mb-0">S'inscrire</p></a>
            </form>
        </div>
    </div>
{% endblock %}
