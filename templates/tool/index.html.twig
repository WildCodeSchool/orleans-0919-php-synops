{% extends 'layout_admin.html.twig' %}

{% block title %}Boîte à outils{% endblock %}

{% block body %}
    <h1>Boîte à outils</h1>

    <div class="container-content">

    <div class="accordion row justify-content-center " id="accordionDeals">
        <div class="card">
            {% for category in categories %}
                <div class="card-header card_button" id="headingOne">
                    <button class="btn btn-link category_button mb-3" type="button" data-toggle="collapse"
                            data-target="#collapse{{ category.id }}"
                            aria-expanded="false" aria-controls="collapseOne"><h3>{{ category.sector }}<i class="fas fa-chevron-down ml-5"></i><i class="fas fa-chevron-up ml-5"></i></h3>
                    </button>
                    <a href="{{ path('tool_new') }}">
                        <button class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter</button>
                    </a>
                </div>
                {% for tool in category.tools %}
                    <div id="collapse{{ category.id }}" class="collapse" aria-labelledby="headingOne"
                         data-parent="#accordionDeals">
                        <div class="card-body tool_card ml-3">

                            <i class="fas fa-1x fa-angle-double-right mr-3"></i>{{ tool.name }}
                            <a href="{{ path('tool_edit', {'id': tool.id}) }}"><button class="btn align-text-bottom text-primary"><i class="fas fa-pen fa-2x"></i></button></a>
                        </div>
                        <div class="">
                            {{ include('tool/_delete_form.html.twig') }}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <h2 class="m-5">Aucun outil à afficher actuellement.</h2>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
